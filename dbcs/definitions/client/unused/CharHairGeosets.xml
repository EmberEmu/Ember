<?xml version="1.0"?>
<dbc>
	<name>CharHairGeosets</name>
	
	<field>
		<type>uint32</type>
		<name>id</name>
		<key>
			<type>primary</type>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>race</name>
		<key>
			<type>foreign</type>
			<parent>ChrRaces</parent>
		</key>
	</field>

	<enum>
		<type>int32</type>
		<name>Sex</name>
		<options>
			<option name="male" value="0x00" />
			<option name="female" value="0x01" />
		</options>
	</enum>

	<field>
		<type>Sex</type>
		<name>sex</name>
	</field>

	<field>
		<type>uint32</type>
		<name>variation</name>
		<key>
			<type>foreign</type>
			<parent>CharVariations</parent>
		</key>
	</field>

	<field>
		<type>int32</type>
		<name>geoset</name>
	</field>

	<enum>
		<type>int32</type>
		<name>Scalp</name>
		<options>
			<option name="hair" value="0x00" />
			<option name="bald" value="0x01" />
		</options>
	</enum>

	<field>
		<type>Scalp</type>
		<name>show_scalp</name>
	</field>
</dbc>