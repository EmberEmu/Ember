/* This defines the message types used by the Spark RPC core */

namespace ember.spark.core;

union Message {
	Hello,
	OpenChannel,
	OpenChannelResponse,
	CloseChannel,
	Ping,
	Pong
}

// can't use ERROR due to clashes
enum Result : int {
	OK, ERROR_UNK
}

table Hello {
	protocol_ver: int = 0;
	description: string (required);
}

table OpenChannel {
	id: int;
	service_type: string (required);
	service_name: string;
}

table OpenChannelResponse {
	result: Result;
	requested_id: int;
	actual_id: int;
	service_name: string (required);
	banner: string (required);
}

table CloseChannel {
	channel: int;
}

table Ping {
	sequence: uint;
}

table Pong {
	sequence: uint;
}

table Header {
	message: Message;
}

root_type Header;