include "Services.fbs";

namespace ember.messaging.core;

enum Opcode : ushort {
	MSG_PING, MSG_PONG, MSG_BANNER, MSG_NEGOTIATE	
}

table Header {
	opcode:ushort;
	service:Service;
	uuid:[ubyte];
}

table Ping {
	timestamp:ulong;
}

table Pong {
	timestamp:ulong;
}

table Banner {
	description:string;
	server_uuid:[ubyte];
}

table Negotiate {
	proto_in:[Service];
	proto_out:[Service];
}