<?xml version="1.0"?>

<dbc>
	<name>ChrRaces</name>

	<enum>
		<type>uint32</type>
		<name>Flags</name>
		<options>
			<option name="none" value="0x00" />
			<option name="not_playable" value="0x01" />
			<option name="bare_feet" value="0x02" />
			<option name="can_current_form_mount" value="0x04" />
			<option name="unknown2" value="0x08" />
		</options>
	</enum>

	<field>
		<type>uint32</type>
		<name>id</name>
		<key>
			<type>primary</type>
		</key>
	</field>

	<field>
		<type>Flags</type>
		<name>flags</name>
	</field>

	<field>
		<type>uint32</type>
		<name>faction</name>
		<key>
			<type>foreign</type>
			<parent>FactionTemplate</parent>
		</key>
	</field>

	<field>
		<name>exploration_sound</name>
		<type>uint32</type>
		<key>
			<type>foreign</type>
			<parent>SoundEntries</parent>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>male_display</name>
		<key>
			<type>foreign</type>
			<parent>CreatureDisplayInfo</parent>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>female_display</name>
		<key>
			<type>foreign</type>
			<parent>CreatureDisplayInfo</parent>
		</key>
	</field>

	<field>
		<type>string_ref</type>
		<name>client_prefix</name>
	</field>

	<field>
		<type>float</type>
		<name>speed_modifier</name>
	</field>

	<enum>
		<type>uint32</type>
		<name>BaseLanguage</name>
		<options>
			<option name="horde" value="0x01" />
			<option name="alliance" value="0x07" />
		</options>
	</enum>

	<field>
		<type>BaseLanguage</type>
		<name>base_lang</name>
	</field>	

	<field>
		<type>uint32</type>
		<name>creature_type</name>
		<key>
			<type>foreign</type>
			<parent>CreatureType</parent>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>login_effect</name>
		<key>
			<type>foreign</type>
			<parent>Spell</parent>
		</key>
	</field>

	<field>
		<type>int32</type>
		<name>unknown1</name>
	</field>

	<field>
		<type>uint32</type>
		<name>res_sickness_spell</name>
		<key>
			<type>foreign</type>
			<parent>Spell</parent>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>splash_sound_entry</name>
		<key>
			<type>foreign</type>
			<parent>SoundEntries</parent>
		</key>
	</field>

	<field>
		<type>int32</type>
		<name>unknown2</name>
	</field>

	<field>
		<type>string_ref</type>
		<name>client_file_path</name>
	</field>

	<field>
		<type>uint32</type>
		<name>cinematic_sequence</name>
		<key>
			<type>foreign</type>
			<parent>CinematicSequences</parent>
		</key>
	</field>

	<field>
		<type>string_ref_loc</type>
		<name>name</name>
	</field>

	<field comment="this is split by gender">
		<type>string_ref[2]</type>
		<name>facial_hair_customisation</name>
	</field>

	<field>
		<type>string_ref</type>
		<name>hair_customisation</name>
	</field>
</dbc>