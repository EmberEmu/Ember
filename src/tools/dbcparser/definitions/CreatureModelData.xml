<?xml version="1.0"?>
<dbc>
	<name>CreatureModelData</name>
	
	<field>
		<type>uint32</type>
		<name>id</name>
		<key>
			<type>primary</type>
		</key>
	</field>

	<field>
		<type>int32</type>
		<name>flags</name>
	</field>

	<field>
		<type>string_ref</type>
		<name>model_path</name>
	</field>

	<enum>
		<type>int32</type>
		<name>SizeClass</name>
		<options>
			<option name="small" value="0x00" />
			<option name="medium" value="0x01" />
			<option name="large" value="0x02" />
			<option name="giant" value="0x03" />
			<option name="colossal" value="0x04" />
		</options>
	</enum>

	<field>
		<type>SizeClass</type>
		<name>size</name>
	</field>
	
	<field>
		<type>float</type>
		<name>model_scale</name>
	</field>

	<field>
		<type>uint32</type>
		<name>blood</name>
		<key>
			<type>foreign</type>
			<parent>UnitBlood</parent>
		</key>
	</field>

	<field>
		<type>uint32</type>
		<name>footprint_texture</name>
		<key>
			<type>foreign</type>
			<parent>FootprintTextures</parent>
		</key>
	</field>

	<field>
		<type>float</type>
		<name>footprint_texture_length</name>
	</field>

	<field>
		<type>float</type>
		<name>footprint_texture_width</name>
	</field>

	<field>
		<type>float</type>
		<name>footprint_texture_scale</name>
	</field>

	<field>
		<type>int32</type>
		<name>foley_material</name>
	</field>

	<field>
		<type>int32</type>
		<name>footstep_shake_size</name>
	</field>

	<field>
		<type>int32</type>
		<name>death_thud_shake_size</name>
	</field>

	<field>
		<type>float</type>
		<name>collision_width</name>
	</field>

	<field>
		<type>float</type>
		<name>collision_height</name>
	</field>

	<field>
		<type>float</type>
		<name>mount_height</name>
	</field>
</dbc>